    <script>
        let currentStep = 1;
        let currentAssemblyStep = 1;
        let totalSteps = 5;
        let totalAssemblySteps = 6;

        // Create stars background
        function createStars() {
            const starsContainer = document.getElementById('stars');
            if (!starsContainer) return;
            
            for (let i = 0; i < 100; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.width = Math.random() * 3 + 1 + 'px';
                star.style.height = star.style.width;
                star.style.animationDelay = Math.random() * 3 + 's';
                starsContainer.appendChild(star);
            }
        }

        function showStep(stepNumber) {
            // Hide all steps
            for (let i = 1; i <= totalSteps; i++) {
                const step = document.getElementById(`step-${i}`);
                if (step) {
                    step.classList.add('hidden');
                    step.classList.remove('flex');
                }
            }
            
            // Show current step
            const currentStepElement = document.getElementById(`step-${stepNumber}`);
            if (currentStepElement) {
                currentStepElement.classList.remove('hidden');
                currentStepElement.classList.add('flex');
            }
        }

        function nextStep() {
            if (currentStep < totalSteps) {
                currentStep++;
                showStep(currentStep);
            }
        }

        function showAssemblyStep(stepNumber) {
            // Hide all assembly steps
            for (let i = 1; i <= totalAssemblySteps; i++) {
                const step = document.getElementById(`assembly-step-${i}`);
                if (step) {
                    step.classList.add('hidden');
                }
            }
            
            // Show current assembly step
            const currentAssemblyStepElement = document.getElementById(`assembly-step-${stepNumber}`);
            if (currentAssemblyStepElement) {
                currentAssemblyStepElement.classList.remove('hidden');
            }
            
            // Update step counter
            const stepCounter = document.getElementById('current-step');
            if (stepCounter) {
                stepCounter.textContent = stepNumber;
            }
            
            // Update navigation buttons
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            
            if (prevBtn) {
                prevBtn.disabled = stepNumber === 1;
                prevBtn.classList.toggle('opacity-50', stepNumber === 1);
            }
            
            if (nextBtn) {
                if (stepNumber === totalAssemblySteps) {
                    nextBtn.textContent = 'Completar ‚úÖ';
                    nextBtn.onclick = () => nextStep();
                } else {
                    nextBtn.textContent = 'Siguiente ‚Üí';
                    nextBtn.onclick = () => nextAssemblyStep();
                }
            }
        }

        function nextAssemblyStep() {
            if (currentAssemblyStep < totalAssemblySteps) {
                currentAssemblyStep++;
                showAssemblyStep(currentAssemblyStep);
            }
        }

        function previousAssemblyStep() {
            if (currentAssemblyStep > 1) {
                currentAssemblyStep--;
                showAssemblyStep(currentAssemblyStep);
            }
        }

        function activateRobot() {
            const button = event.target;
            button.innerHTML = 'üîÑ Activando...';
            button.disabled = true;
            
            // Simulate activation process
            setTimeout(() => {
                button.innerHTML = '‚úÖ ¬°Activado!';
                button.classList.remove('bg-gradient-to-r', 'from-green-500', 'to-blue-600');
                button.classList.add('bg-green-600');
                
                setTimeout(() => {
                    nextStep();
                }, 1500);
            }, 2000);
        }

        function goToMissions() {
            // Get player name from localStorage or prompt for it
            let playerName = localStorage.getItem('playerName');
            if (!playerName) {
                playerName = prompt('¬øCu√°l es tu nombre de explorador?') || 'Explorador';
                localStorage.setItem('playerName', playerName);
            }
            
            // Redirect to main missions page
            window.location.href = 'index.html';
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            createStars();
            showStep(1);
            showAssemblyStep(1);
        });
    </script>
</body>
</html>
